---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer.astro";
---

<Layout>
  <main
    class="flex h-full flex-col lg:flex-row lg:items-stretch"
    id="main-content"
    data-layout="index"
  >
    <section
      class="mx-0 h-[300px] w-full max-w-none flex-shrink-0 px-0 md:h-[500px] lg:h-auto lg:w-1/3"
      id="family-photo"
    >
    </section>
    <section
      id="hero"
      class="mx-0 flex h-auto w-full max-w-none flex-grow flex-col px-12 pt-8 pb-6 lg:w-2/3 lg:flex-grow-0 lg:overflow-y-auto"
    >
      <div class="flex flex-grow flex-col lg:justify-center">
        <h1
          class="my-4 inline-block text-center text-4xl font-bold sm:my-8 sm:text-5xl"
        >
          Daniel Abernathy
        </h1>

        <p class="my-2">
          I'm a senior web developer with over a decade of experience building
          websites and applications. I currently specialize in Vue.js and
          TypeScript, but I spent many years working with PHP - first with
          WordPress, and then with Laravel.
        </p>

        <p class="my-2">
          I live with my wife Emily and our two boys in Dripping Springs, Texas
          - just outside of Austin.
        </p>

        <p class="my-2">A few more things to know about me:</p>

        <ul class="list-disc">
          <li class="ms-8">
            I helped create a local tech conference called <a
              href="https://www.longhornphp.com"
              target="_blank">Longhorn PHP</a
            >
          </li>
          <li class="ms-8">
            I try to hike a section of the Appalachian Trail every year
          </li>
          <li class="ms-8">
            I'm a lifelong Christian and I currently attend the <a
              href="https://www.austinstone.org/"
              target="_blank">Austin Stone church</a
            >
          </li>
          <li class="ms-8">
            I'm trying to get into fitness by doing <a
              href="https://hyroxus.com/"
              target="_blank">Hyrox</a
            > races
          </li>
        </ul>
      </div>
      <Footer noMarginTop />
    </section>
  </main>
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>

<style>
  #family-photo {
    background-image: url("../assets/images/abernathy-family.webp");
    background-size: cover;
    background-position: center 30%;
  }

  #hero {
    background: linear-gradient(
      120deg,
      #faf8f3 0%,
      #f0ebd2 40%,
      #e8dcc0 70%,
      #ddd0b0 100%
    );
  }
</style>
